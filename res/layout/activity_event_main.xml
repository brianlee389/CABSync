<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#002A5C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventMainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:maxLines = "21"
        android:text="@string/hello_world"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addEvent"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/beenToEvent"
        android:layout_alignLeft="@+id/textView1"
        android:text="@string/addEventButton"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/writeButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/beenToEvent"
        android:layout_alignParentBottom="true"
        android:text="@string/createReview"
        android:textColor="#FFFFFF"
         />

    <TextView
        android:id="@+id/beenToEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/writeButton"
        android:layout_alignLeft="@+id/addEvent"
        android:text="@string/ratingInstruct" />

</RelativeLayout>